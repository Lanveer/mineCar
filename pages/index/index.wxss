/* pages/index/index.wxss */
@import "../.././template/customdialog/customdialog.wxss";

.section {
  width: 100%;
  height: 50px;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  justify-content: space-between;
  border-bottom: 1px solid #eaeaea;
}

.section>label {
  margin-left: 10pt;
  color: #999;
  font-size: 12pt;
  font-weight: bold;
  width: 120pt;
}

.section>text {
  margin-right: 10pt;
  font-size: 12pt;
  color: #088cfc;
  font-weight: bold;
}

.section>image {
  margin-right: 10pt;
  width: 10pt;
  height: 10pt;
}

.first-section {
  border-top: 1px solid #eaeaea;
}

.tip {
  width: 100%;
  height: 60px;
  background: #dedede;
  font-size: 12pt;
  color: #b2b2b2;
  text-align: center;
  line-height: 60px;
  font-weight: bold;overflow: hidden;
  font-family: 'pingFang-SC-Bold';
}
.tip>view{
  width: auto;height: 30px;
  margin: 15px auto;
  background: #ef4c4c;
  font-size: 10pt;
  color: #fff;
  overflow: hidden;
  border-radius: 5pt;
  line-height: 30px;
}




.choose-section>label {
  color: #008bff;
}

.pic-info {
  width: 100%;
  height: auto;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  flex-wrap: wrap;
}

.upload {
  width: 24.5%;
  height: 45pt;
  border: 1px solid #eaeaea;
  text-align: center;
  font-size: 12pt;
  border-top: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  vertical-align: middle;
  position: relative;
  overflow: hidden;
}

.up-tips {
  width: 100%;
  height: 70%;
  margin-top: 15%;
  display: flex;
  overflow: hidden;
  flex-direction: column;
  align-items: center;
  vertical-align: middle;
}

.imgbox {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 11;
}

.imgbox>image {
  max-width: 100%;
  width: 100%;
  height: 100%;
}

.imgbox>view {
  width: 100%;
  height: 20pt;
  opacity: 0.7;
  background: #000;
  color: #dedede;
  font-size: 10pt;
  position: absolute;
  bottom: 0;
  line-height: 20pt;
}

.up-tips>text {
  color: #008bff;
  /* margin-top: 22%; */
  font-weight: bold;
  font-size: 12pt;
  
}

.up-tips>label {
  color: #b2b2b2;
  font-weight: bold;
  font-size: 10pt;
}

.upload:nth-child(2n+1) {
  /* background: yellow; */
  border-right: none;
  border-left: none;
}

.upload:nth-child(4n) {
  /* background: #000; */
  border-right: none;
}

.upload:last-child {
  border-right: 1px solid #eaeaea;
}

.upload>image {
  width: 100%;
  height: 100%;
}

.add {
  width: 100%;
  height: 100%;
}

.append {
  width: 40pt;
  height: 30pt;
  margin-top: 7.5pt;
}

::-webkit-scrollbar {
  display: none;
}

.footer {
  width: 100%;
  height: 50pt;
  padding-top: 30pt;
  background: #dedede;
  display: flex;
  flex-direction: row;
  align-items: center;
  vertical-align: middle;
  justify-content: space-between;
}

.cancel {
  width: 80pt;
  height: 30pt;
  background: #f04c4c;
  border: 1px solid #c03d3d;
  color: #fff;
  font-size: 12pt;
  font-weight: bold;
  text-align: center;
  line-height: 30pt;
  outline: none;
  border-radius: 5pt;
}

.yes {
  width: 130pt;
  height: 30pt;
  background: #008bff;
  border: 1px solid #006fcc;
  color: #fff;
  font-size: 12pt;
  font-weight: bold;
  text-align: center;
  line-height: 30pt;
  outline: none;
  border-radius: 5pt;
}

.clear {
  width: 100%;
  height: 20pt;
  background: #dedede;
  text-align: center;
  color: #008bff;
  font-size: 12pt;
  font-weight: bold;
  font-family: 'pingFang-SC-Bold';
}

.goods-choosed {
  white-space: nowrap;
  /* display: flex;  */
  flex-direction: row;
  align-items: center;
  height: 50px;
  width: 70%;
  vertical-align: middle;
  justify-content: space-around;
  border-top: 1px solid #eaeaea;
  padding-left: 12pt;
}

.goods-choosed view {
  font-size: 12pt;
  color: #50bf22;
  line-height: 50px;
  font-weight: bold;
  margin-right: 10pt;
  display: inline-block;
}

/*add begin  */

.photo-view-container {
  width: 100%;
  background: #fff;
  overflow: hidden;
  background: red;
}

.photo-view {
  display: inline-block;
  border: solid 1px #eaeaea;
  border-left: none;
  border-top: none;
}

.photo-view:nth-child(4n) {
  border-right: none;
}

.photo-view:nth-child(n+5) {
  margin-top: -10rpx;
  border-top: none;
}

.photo-view image {
  position: absolute;
  margin-top: -1px;
}

.photo-view view {
  position: absolute;
  align-items: center;
}

.photo-view-text-container {
  position: absolute;
  display: block;
}

.photo-view view text {
  width: 100%;
  text-align: center;
  display: inline-block;
  font-size: 14px;
}

.photo-view-main {
  font-size: 14px;
  font-weight: bold;
  color: #008bff;
}

.photo-view-sub {
  font-size: 14px;
  font-weight: bold;
  color: #000;
  opacity: 0.3;
}

.photo-view-coverage {
  position: absolute;
  bottom: 0px;
  background-color: #444;
  opacity: 0.3;
  font-size: 14px;
  height: 24px;
  line-height: 24px;
  align-items: center;
  justify-content: center;
}

