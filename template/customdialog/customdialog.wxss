.custom-dialog {
  position: relative;
  height: auto;
  width: 260px;
  margin: 0 calc(50% - 130px) 0 calc(50% - 130px);
  border-width: 2px;
  border: solid 1px #777;
  border-radius: 5px;
  background: white;
}

.custom-dialog .title {
  display: block;
  line-height: 21px;
  text-align: center;
  font-size: 17px;
  width: 100%;
}

.custom-dialog .tips {
  display: block;
  line-height: 21px;
  min-height: 21px;
  text-align: left;
  font-size: 14px;
  width: 100%;
}

.custom-dialog .button {
  line-height: 45px;
  color: #008bff;
  display: block;
  text-align: center;
}

.custom-dialog .hor-button {
  width: 49.75%;
  vertical-align: top;
  display: inline-block;
  text-align: center;
  line-height: 45px;
  color: #008bff;
}
